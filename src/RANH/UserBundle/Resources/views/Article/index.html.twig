{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none">{{ 'Articles List'|trans }}</h2>
            </div>

            <div class="table responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'Id', 'entity.id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Nombre', 'entity.name') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Descripción', 'entity.description') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Estado', 'entity.state') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Subcategoría', 'entity.subcategories') }}</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in pagination %}
                        <tr>
                            <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.description }}</td>
                            <td>{{ entity.state }}</td>
                            <td>{{ entity.subcategories }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a class="btn btn-sm btn-primary " href="{{ path('article_show', { 'id': entity.id }) }}">show</a>

                                        <a class="btn btn-sm btn-info" href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {#Display Navigation#}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>

            </div>

        </div>
    </div>
{% endblock %}
