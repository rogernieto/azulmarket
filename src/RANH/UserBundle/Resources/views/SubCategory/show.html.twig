{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container well" style="width: 40%; margin-top: 5%" >
        <div class="col-md-9">
            <dl>
                <dt>{{'SubCategory'|trans}}</dt>
                <dd>
                    {{ entity.id }}
                    &nbsp;
                </dd>
                <br/>

                <dt>{{'Name'|trans}}</dt>
                <dd>
                    {{ entity.name }}
                    &nbsp;
                </dd>
                <br/>

                <dt>{{'Category'|trans}}</dt>
                <dd>
                    {{ entity.category }}
                    &nbsp;
                </dd>
                <br/>
            </dl>

            <div class="col-md-3">
                <h3>{{ 'Acciones'}}:</h3>
                <p>
                    <a href="{{ path('subcategory_edit', { id: entity.id }) }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit"></span>
                        {{ 'Editar Sub Categor√≠a' }}
                    </a>
                </p>
                <br/>
                <p>
                    {{ form(delete_form) }}
                </p>
                <br/>
                <p>
                    <a href="{{ path('subcategory') }}" class="btn btn-default">
                        Back to the list
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
