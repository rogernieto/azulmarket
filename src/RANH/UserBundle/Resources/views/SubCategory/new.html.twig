{% extends 'layout.html.twig' %}

{% block body -%}
    {{ parent() }}

    <div class="main container" style="width: 40%; margin-top: 5%">
        <div class="row well">
            <div class="col-md-12">
                <div class="page-header">
                    <h2>{{ 'New SubCategory'|trans }}</h2>
                </div>
                {{ form_start(form, {'attr':{'role':'form'}}) }}

                <fieldset>
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr':{'class':'form-control', 'placeholder':'New SubCategory'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <br/>
                    <p>
                        {{ form_widget(form.save, {'label' : 'Crear SubCategoria', 'attr': { 'class':'btn btn-success' }}) }}
                    </p>
                </fieldset>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}