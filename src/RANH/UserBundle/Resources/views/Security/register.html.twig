{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	{{ include('RANHUserBundle:User:messages/success.html.twig') }}

	<div class="main container">
		<div class="row well">
			<div class="col-md-6">
				<div class="page-header">
					<h2>{% trans %}New Account{% endtrans %}</h2>
				</div>
				{{ form_start(form2, { 'attr': {'novalidate':'novalidate', 'role' : 'form'} }) }}
				
				<div class="form-group">
					{{ form_label(form2.username) }}
					{{ form_widget(form2.username, { 'attr': {'class':'form-control', 'placeholder':'Tu nombre de usuario' } })  }}

					<span class="text-danger"> 
						{{ form_errors(form2.username)}}
					</span>
				</div>

				<div class="form-group">
					{{ form_label(form2.firstName) }}
					{{ form_widget(form2.firstName, { 'attr': {'class':'form-control', 'placeholder':'Primer nombre' } })  }}

					<span class="text-danger"> 
						{{ form_errors(form2.firstName)}}
					</span>
				</div>


				<div class="form-group">
					{{ form_label(form2.lastName) }}
					{{ form_widget(form2.lastName, { 'attr': {'class':'form-control', 'placeholder':'Primer apellido' } })  }}

					<span class="text-danger"> 
						{{ form_errors(form2.lastName)}}
					</span>
				</div>
				<div class="form-group">
					{{ form_label(form2.email) }}
					{{ form_widget(form2.email, { 'attr': {'class':'form-control', 'placeholder':'Correo electrónico' } })  }}
					<span class="text-danger"> 
						{{ form_errors(form2.email)}}
					</span>
				</div>


				<div class="form-group">
					{{ form_label(form2.password) }}
					{{ form_widget(form2.password, { 'attr': {'class':'form-control', 'placeholder':'Contraseña' } })  }}

					<span class="text-danger"> 
						{{ form_errors(form2.password)}}
					</span>
				</div>


				<div class="escondida">
					{{ form_label(form2.role) }}
					{{ form_widget(form2.role, { 'attr': {'class':'form-control'} })  }}
					<span class="text-danger"> 
						{{ form_errors(form2.role)}}
					</span>
				</div>

				<div class="escondida">
					<label>
						{{ form_widget(form2.isActive) }}{% trans %}Active{% endtrans %}
						<span class="text-danger">  
							{{ form_errors(form2.isActive) }} 
						</span>
					</label>
				</div>
				<p>
					{{ form_widget(form2.save, {'label' : 'Crear Usuario', 'attr': { 'class':'btn btn-success' }}) }}
				</p>	

				{{ form_end(form2) }}
			</div>
		</div>
	</div>
{% endblock %}
